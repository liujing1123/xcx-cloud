/* miniprogram/pages/musicPlayer/musicPlayer.wxss */
page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: calc(100%);
  display: flex;
  flex-direction: column;
}

.music-name {
  width: 100%;
  justify-content: center;
  align-items: center;

}

.music-info {
  width: 100%;
  display: flex;
  justify-content: center;
  height: 60rpx;
  align-items: center;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.play-content {
  width: 100%;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.btn-content {
  width: 100%;

  display: flex;
  align-items: center;
  justify-content: space-around;
}

.play-btn {
  width: 100rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}